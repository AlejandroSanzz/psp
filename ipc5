void main(){
	int dni;
	char letra[] = "TRWAGMYFPDXBNJZSQVHLCKE";
     int fd[2]; 
     char buffer[30];
     pid_t pid;
    
     // Creamos el pipe
     pipe(fd); 
     
     //Se crea un proceso hijo
     pid = fork();

     if (pid==0)
     
     {
                close(fd[1]); // Cierra el descriptor de lectura
                printf("Introduce el n√∫mero de tu DNI: ");  
                                                                                 
     }
     
     else
     
     {
                close(fd[0]); // Cierra el descriptor de lectura
